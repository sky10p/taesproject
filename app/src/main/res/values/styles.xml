<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/customActionModeStyle</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/light_grey</item>
        <item name="android:actionModeCloseButtonStyle">@color/black</item>
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
